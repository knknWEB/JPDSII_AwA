<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:p="http://primefaces.org/ui">

<h:head>
	<meta charset="utf-8"/>
	<title>Edycja wpisów</title>
</h:head>
<h:body style="background-color: #eee; margin: 0.5em;">

	<p:panel header="Opcje wyszukiwania" toggleable="true" collapsed="true"
		style="margin-bottom: 1em;">
		<h:form>
			<h:panelGrid columns="2" cellpadding="5">
				<h:outputLabel value="author:" />
				<p:inputText value="#{newsListBB.author}" />
				<p:commandButton value="Szukaj" update="form-table" />
			</h:panelGrid>
		</h:form>
	</p:panel>

	<p:messages />

	<h:form id="form-table" style="margin-bottom:1em;">
	
		<p:commandButton value="Strona główna"
			action="index.jsf" style="margin-bottom:1em;"/>
		<p:commandButton value="Dodaj nową osobę"
			action="#{newListBB.newNews()}" style="margin-bottom:1em;"/>
			

		<p:dataTable value="#{newListBB.list}" var="n">

			<p:column priority="5">
				<f:facet name="header">
					<h:outputText value="data" />
				</f:facet>
				<h:outputText value="#{n.author}" />
			</p:column>

			<p:column>
				<f:facet name="header">
					<h:outputText value="tytuł" />
				</f:facet>
				<h:outputText value="#{n.title}" />
			</p:column>
			<p:column>
				<f:facet name="header">
					<h:outputText value="opis" />
				</f:facet>
				<h:outputText value="#{n.photo}" />
			</p:column>
			<p:column>
				<f:facet name="header">
					<h:outputText value="zdjęcie" />
				</f:facet>
				<h:outputText value="#{n.description}" />
			</p:column>

			<p:column priority="4">
				<f:facet name="header">
					<h:outputText value="data ur." />
				</f:facet>
				<h:outputText value="#{n.date}">
					<f:convertDateTime pattern="dd-MM-yyyy" />
				</h:outputText>
			</p:column>

			<p:column>
				<f:facet name="header">
					<h:outputText value="opcje" />
				</f:facet>

				<p:commandButton value="Edytuj"
					action="#{newListBB.editNews(p)}" />

				<p:commandButton value="Usuń"
					action="#{newListBB.deleteNews(p)}" update="@form" />

				<p:button outcome="personEditGET" value="Edytuj (GET)">
					<f:param name="p" value="#{p.idperson}" />
				</p:button>
			</p:column>

		</p:dataTable>
	</h:form>

</h:body>
</html>